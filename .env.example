# ============================================
# Virtual Debate Panel - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains secrets!

# ============================================
# LLM Configuration
# ============================================
# Which LLM provider to use: gemini, openai, or anthropic
LLM_PROVIDER=gemini

# Google Gemini API Configuration
# Gemini API key is loaded from Google Secret Manager in setup.sh
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI API Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
OPENAI_ORG_ID=

# Anthropic API Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# ============================================
# Vector Database Configuration
# ============================================
# Which vector DB to use: chromadb or pinecone
VECTOR_DB=chromadb

# ChromaDB Configuration (local/persistent)
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=author_library

# Pinecone Configuration (cloud)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=virtual-debate-panel

# ============================================
# Embedding Configuration
# ============================================
EMBEDDING_MODEL=models/text-embedding-004
EMBEDDING_DIMENSION=768

# ============================================
# Semantic Router Configuration
# ============================================
RELEVANCE_THRESHOLD=0.7
MIN_AUTHORS=2
MAX_AUTHORS=5
FALLBACK_TO_TOP_AUTHORS=true
FALLBACK_AUTHOR_COUNT=3

# ============================================
# RAG Pipeline Configuration
# ============================================
TOP_K_CHUNKS=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_RESPONSE_TOKENS=300
LLM_TEMPERATURE=0.7

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://agora-frontend.your-domain.com
RATE_LIMIT_PER_MINUTE=30
ENABLE_AUTH=false
API_KEY=

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log
DEBUG=false

# ============================================
# Data Paths
# ============================================
DATA_RAW_DIR=./data/raw
DATA_PROCESSED_DIR=./data/processed
DATA_EMBEDDINGS_DIR=./data/embeddings

# ============================================
# Cache Configuration
# ============================================
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# ============================================
# Performance Tuning
# ============================================
LLM_TIMEOUT=30
MAX_CONCURRENT_AUTHORS=5
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# ============================================
# Google Cloud Configuration (for deployment)
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=agora-backend
GCS_FRONTEND_BUCKET=agora-frontend
ARTIFACT_REGISTRY_REPO=agora-images
